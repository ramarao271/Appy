<p id="notice"><%= notice %></p>

<h1>Listing Description Templates</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @description_templates.each do |description_template| %>
      <tr>
        <td><%= description_template.title %></td>
        <td><%= description_template.description %></td>
        <td><%= link_to 'Show', description_template %></td>
        <td><%= link_to 'Edit', edit_description_template_path(description_template) %></td>
        <td><%= link_to 'Destroy', description_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

