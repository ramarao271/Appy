<%= form_for @registration_setting do |f| %>
<input type="hidden" name="handler" value="coupon" />
<table class="table">
      <tr>
          <td>No.</td><td>Coupon Code</td><td>Coupon Value</td>
      </tr>
      <% i=1 %>
      <%= f.fields_for :registration_coupons do |registration_coupon| %>
      <tr>
          <td><%= i %><% i+=1 %></td>
          <td><%= registration_coupon.text_field :coupon_code %></td>
          <td><%= registration_coupon.text_field :coupon_value %></td>
      </tr>
      <% end %>
</table>
<div class="actions">
    <%= f.submit %>
</div>
<% end %>