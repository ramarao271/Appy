<p id="notice"><%= notice %></p>

<h1>Listing Customer Refer Emails</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Refer email</th>
      <th>No of times sent</th>
      <th>Joined</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_refer_emails.each do |customer_refer_email| %>
      <tr>
        <td><%= customer_refer_email.customer_id %></td>
        <td><%= customer_refer_email.refer_email %></td>
        <td><%= customer_refer_email.no_of_times_sent %></td>
        <td><%= customer_refer_email.joined %></td>
        <td><%= link_to 'Show', customer_refer_email %></td>
        <td><%= link_to 'Edit', edit_customer_refer_email_path(customer_refer_email) %></td>
        <td><%= link_to 'Destroy', customer_refer_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

