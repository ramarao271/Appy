<%= bootstrap_form_for(@image_file) do |f| %>
  <% if @image_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@image_file.errors.count, "error") %> prohibited this image_file from being saved:</h2>

      <ul>
      <% @image_file.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= f.select :product_type, [["Saree","Saree"], ["Salwar Suit", "Salwar Suit"]] %>
  </div>
<div class="field">
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.text_field :path %>
  </div>
  <div class="field">
    <%= f.select :image_for, [["Front","Front"],["Back","Back"],["Sleeve","Sleeve"],["Bottom","Bottom"]] %>
  </div>
  <div class="field">
    <%= f.text_field :cost %>
  </div>
  <div class="field">
    <%= f.select :pairs, [[1, "Apple"], [2, "Grape"]] %>
  </div>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
$("#image_for").change(function(){
    $("#pairs").toggle();
});
</script>