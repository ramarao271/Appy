<table>
    <tr>
        <td>Product Id</td>
        <td>Title</td>
        <td>Price</td>
        <td>Descriptions</td>
    </tr>
    <% @products.each do |product| %>
    <tr>
        <td><%= product.product_id %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td>
            <table>
                <tr>
                    <td>Description Title</td>
                    <td>Description</td>
                </tr>
                <% product.product_descriptions.each do |product_description| %>
                <tr>
                    <td><%= product_description.title %></td>
                    <td><%= product_description.description %></td>
                </tr>
                <% end %>
            </table>
        </td>        
    </tr>
    <% end %>
</table>