<p id="notice"><%= notice %></p>

<h1>Listing Discount Generators</h1>

<table border="1" width="100%">
  <thead>
    <tr>
      <th>Name of campaign</th>
      <th>Coupon prefix</th>
      <th>Status</th>
      <th>Discount type</th>
      <th>coupons</th>
      <th>Starts at</th>
      <th>End date</th>
      <th>Coupon for</th>
      <th>Value</th>
      <th colspan="3">Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @discount_generators.each do |discount_generator| %>
      <tr>
        <td><%= discount_generator.name_of_discount_campaign %></td>
        <td><%= discount_generator.coupon_prefix %></td>
        <td><%= discount_generator.status %></td>
        <td><%= discount_generator.discount_type %></td>
        <td><%= discount_generator.no_of_coupons %></td>
        <td><%= discount_generator.starts_at %></td>
        <td><%= discount_generator.end_date %></td>
        <td><%= discount_generator.coupon_for %></td>
        <td><%= discount_generator.value %></td>
        <% if discount_generator.status=="CREATED" %>
          <td><%= link_to 'Show', discount_code_path(discount_generator) %></td>
        <% else %>
          <td><%= link_to 'Generate', generate_discount_coupons_path(discount_generator) %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_discount_generator_path(discount_generator) %></td>
        <td><%= link_to 'Destroy', discount_generator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

