<h1>Editing Product Description</h1>
<%= render 'form' %>
<script src="http://cdn.ckeditor.com/4.5.4/full/ckeditor.js"></script>
<script>

  CKEDITOR.replace( 'product_description_description' );
</script>
<% if !@product_descriptions.nil? %>
<table data-toggle="table" class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_descriptions.each do |product_description| %>
      <tr>
        <td><%= product_description.title %></td>
        <td><%= product_description.description %></td>
        <td><%= product_description.product_id %></td>
        <td><%= link_to 'Show', product_description %></td>
        <td><%= link_to 'Edit', edit_product_description_path(product_description) %></td>
        <td><%= link_to 'Destroy', product_description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<%= link_to 'Show', @product_description %> |
<%= link_to 'Back', product_descriptions_path %>
