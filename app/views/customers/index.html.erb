<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Reward points gained</th>
      <th>Reward points redeemed</th>
      <th>Reward points balance</th>
      <th>Referral count</th>
      <th>Referral amount</th>
      <th>Orders count</th>
      <th>Orders amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_id %></td>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.reward_points_gained %></td>
        <td><%= customer.reward_points_redeemed %></td>
        <td><%= customer.reward_points_balance %></td>
        <td><%= customer.referral_count %></td>
        <td><%= customer.referral_amount %></td>
        <td><%= customer.orders_count %></td>
        <td><%= customer.orders_amount %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

